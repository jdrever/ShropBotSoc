<?xml version="1.0" encoding="UTF-8"?>
<!-- Url Rewriting rule for deployment to IIS -->
<configuration>
  <system.web>
      <customErrors mode="Off"/>
  </system.web>
  <system.webServer>
    <httpErrors errorMode="Detailed" />
    <rewrite>
      <rules>
        <rule name="Controllers" stopProcessing="true">
          <match url="^(species|sites|squares)$" ignoreCase="false" />
          <action type="Rewrite" url="public/index.php?url={R:1}" appendQueryString="true" />
        </rule>
        <rule name="Assets and resources (everything else)" stopProcessing="true">
          <match url="^(.*)$" ignoreCase="false" />
          <action type="Rewrite" url="public/{R:1}" appendQueryString="false" />
        </rule>
        <rule name="Root (nothing)" stopProcessing="true">
          <match url="^(?![\s\S])" />
          <action type="Rewrite" url="public/" />
        </rule>
      </rules>
    </rewrite>
  </system.webServer>
</configuration>